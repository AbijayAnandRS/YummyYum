<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION TO BE RECIEVED"
        android:textSize="24dp"
       android:textColor="#000000"

        android:id="@+id/textView455"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="ORDER"
        android:background="@drawable/btnorder"
        android:textColor="#FFF"
        android:id="@+id/button55"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:background="@mipmap/loader"
        android:id="@+id/button565"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TOTAL MRP"
        android:id="@+id/textView5yui"
       android:layout_marginTop="150dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/editText55"
        android:layout_alignBottom="@+id/button565"
        android:layout_alignLeft="@+id/textView455"
        android:layout_alignStart="@+id/textView455"
        android:layout_marginBottom="36dp"
        android:layout_alignRight="@+id/textView455"
        android:layout_alignEnd="@+id/textView455" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button565"
        android:layout_alignLeft="@+id/editText55"
        android:layout_alignStart="@+id/editText55"
        android:layout_marginTop="39dp"
        android:id="@+id/cosmic"
        android:layout_alignRight="@+id/editText55"
        android:layout_alignEnd="@+id/editText55" />


</RelativeLayout>